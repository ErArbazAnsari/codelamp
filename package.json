{
    "name": "codelamp",
    "displayName": "codelamp",
    "description": "your personal coder helper",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "codelamp-sidebar",
                    "title": "CodeLamp",
                    "icon": "./media/logo.svg"
                }
            ]
        },
        "views": {
            "codelamp-sidebar": [
                {
                    "type": "webview",
                    "id": "codelamp.sidebarWebView",
                    "name": "codelamp chat"
                }
            ]
        },
        "activationEvents": [
            "onView:codelamp.sidebarWebView"
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "dependencies": {
        "@google/genai": "^0.4.0",
        "marked": "^11.1.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.107.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.39.1"
    }
}
